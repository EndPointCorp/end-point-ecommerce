@page
@model EndPointCommerce.AdminPortal.Pages.Coupons.IndexModel

@{
    ViewData["Title"] = "Coupons";
}

@section styles {
    <link rel="stylesheet" href="~/js/coupons.index.css">
}

<div class="container-fluid px-4">
    <div class="row py-4">
        <div class="col">
            <h2><i class="fas fa-ticket"></i> Coupons</h2>
        </div>
        <div class="col">
            <a asp-page="Create" class="btn btn-primary float-end" role="button">
                <i class="fa-solid fa-folder-plus"></i>
                Add a new coupon
            </a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <table id="table-coupons" class="datatable-table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Coupons[0].Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Coupons[0].Discount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Coupons[0].IsDiscountFixed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Coupons[0].DateCreated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Coupons[0].DateModified)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/coupons.index.js" asp-append-version="true"></script>
}
