@page
@model EndPointCommerce.AdminPortal.Pages.Countries.IndexModel

@{
    ViewData["Title"] = "Countries";
}

@Html.AntiForgeryToken()

<div class="container-fluid px-4">
    <div class="row py-4">
        <div class="col">
            <h2><i class="fa-solid fa-globe"></i></i> Countries</h2>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <table id="table-countries">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Countries[0].Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Countries[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Countries[0].Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Countries[0].IsEnabled)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Countries) {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.Id)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Name)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Code)
                        </th>
                        <th>
                            <div class="form-check form-switch">
                                <input
                                    type="checkbox"
                                    id="is-enabled-@item.Id"
                                    class="is-enabled-checkbox form-check-input"
                                    @(item.IsEnabled ? "checked" : "")
                                    data-country-id="@item.Id"
                                />
                                <label class="form-check-label" for="is-enabled-@item.Id"></label>
                            </div>
                        </th>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/countries.index.js" asp-append-version="true"></script>
}
