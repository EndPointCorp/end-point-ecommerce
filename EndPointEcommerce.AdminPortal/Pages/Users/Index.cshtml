@page
@model EndPointEcommerce.AdminPortal.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Users";
}

@section styles {
    <link rel="stylesheet" href="~/js/users.index.css">
}

<div class="container-fluid px-4">
    <div class="row py-4">
        <div class="col">
            <h2><i class="fas fa-person"></i> Users</h2>
        </div>
        <div class="col">
            <a asp-page="Create" class="btn btn-primary float-end" role="button">
                <i class="fa-solid fa-folder-plus"></i>
                Add a new user
            </a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <table id="table-users" class="datatable-table">
                <thead>
                    <tr>
                        <th>
                            Email
                        </th>
                        <th>
                            Role
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/users.index.js" asp-append-version="true"></script>
}
