@page
@model EndPointEcommerce.AdminPortal.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Customers";
}

@section styles {
    <link rel="stylesheet" href="~/js/customers.index.css">
}

<div class="container-fluid px-4">
    <div class="row py-4">
        <div class="col">
            <h2><i class="fas fa-person"></i> Customers</h2>
        </div>
        <div class="col">
            <a asp-page="Create" class="btn btn-primary float-end" role="button">
                <i class="fa-solid fa-folder-plus"></i>
                Add a new customer
            </a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <table id="table-customers" class="datatable-table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Customers[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customers[0].LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customers[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customers[0].DateCreated)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/customers.index.js" asp-append-version="true"></script>
}
