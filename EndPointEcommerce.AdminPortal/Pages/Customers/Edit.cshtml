@page "{id:int}"
@model EndPointEcommerce.AdminPortal.Pages.Customers.EditModel

@{
    ViewData["Title"] = $"Edit customer";
}

<div class="container-fluid px-4">
    <form method="post">
        <div class="row py-4">
            <div class="col">
                <h2>Edit customer</h2>
            </div>
            <div class="col">
                <a asp-page="Index" class="btn btn-outline-danger float-end" role="button">
                    <i class="fa-solid fa-circle-arrow-left"></i>
                    Cancel
                </a>
                <button type="submit" asp-page-handler="SaveAndContinue" class="btn btn-primary float-end me-2">
                    <i class="fa-solid fa-folder-plus"></i>
                    Save and continue to edit
                </button>
                <button type="submit" asp-page-handler="Save" class="btn btn-primary float-end me-2">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Save
                </button>
            </div>
        </div>

        <input type="hidden" asp-for="Customer.Id" />

        <partial name="_Form.cshtml" for="Customer" />

        <a asp-page="/Addresses/Index" asp-route-customerId="@Model.Customer.Id" class="btn btn-primary float-end me-2">
            <i class="fa-solid fa-book"></i>
            Edit customer addresses
        </a>

    </form>
</div>
