@model EndPointEcommerce.AdminPortal.ViewModels.QuoteViewModel

@if (Model.Items != null)
{
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-list"></i>
        Quote Items
    </div>
    <div class="card-body">
        <table id="table-quote-items">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model.Items[0].Product.Sku)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Items[0].Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Items[0].Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Items[0].UnitPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Items[0].TotalPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Items[0].Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model.Items[0].Total)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items.ToList())
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.Product.Sku)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Discount)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.Total)
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}