@page
@model EndPointEcommerce.AdminPortal.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid px-4 col-md-6">
    <div class="row py-4">
        <div class="col">
            <h2><i class="fas fa-person"></i> Login</h2>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Login.Username" class="form-label"></label>
                    <input asp-for="Login.Username" class="form-control"/>
                    <span asp-validation-for="Login.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Login.Password" class="form-label"></label>
                    <input asp-for="Login.Password" class="form-control" type="password"/>
                    <span asp-validation-for="Login.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary float-end me-2">
                    Log in
                </button>
            </form>
        </div>
    </div>

    <div class="card p-3">
        <p>
            This is a demo site.
        </p>
        <p>
            You can log in and make changes using the following credentials:
        </p>
        <p>
            <strong>Username: </strong><code>admin</code>
            <br />
            <strong>Password: </strong><code>Password123!</code>
        </p>
        <p>
            All changes will be reset nightly. Feel free to add products, change pricing, add descriptions, and more. Your changes will be reflected in the demo site at <a href="https://demo.ecommerce.endpointdev.com">demo.ecommerce.endpointdev.com</a> and remain there for the day.
        </p>
    </div>
</div>
