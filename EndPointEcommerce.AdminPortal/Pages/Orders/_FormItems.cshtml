@model EndPointEcommerce.AdminPortal.ViewModels.OrderViewModel

@if (Model.Items != null)
{
<div class="container-fluid px-4">
    <div class="row py-4">
        <div class="col">
            <h3><i class="fas fa-list"></i> Order Items</h3>
        </div>
        <div class="col">
            <a asp-page="/OrderItems/Create" asp-route-orderId="@Model.Id" class="btn btn-primary float-end" role="button">
                <i class="fa-solid fa-folder-plus"></i>
                Add a new item
            </a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <table id="table-order-items">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items[0].Product.Sku)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items[0].Product.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items[0].Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items[0].TotalPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items[0].Discount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => Model.Items[0].Total)
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items.ToList())
                    {
                        <tr>
                            <th>
                                @Html.DisplayFor(modelItem => item.Product.Sku)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Product.Name)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.TotalPrice)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.Total)
                            </th>
                            <td>
                                <a asp-page="/OrderItems/Edit" asp-route-id="@item.Id" class="btn btn-link p-0" role="button">
                                    <i class="fa-solid fa-pen-to-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}