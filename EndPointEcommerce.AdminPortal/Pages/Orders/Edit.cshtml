@page "{id:int}"
@model EndPointEcommerce.AdminPortal.Pages.Orders.EditModel

@{
    ViewData["Title"] = $"Edit order";
}

<div class="container-fluid px-4">
    <form method="post">
        <div class="row py-4">
            <div class="col">
                <h2>Edit order</h2>
            </div>
            <div class="col">
                <a asp-page="Index" class="btn btn-outline-danger float-end" role="button">
                    <i class="fa-solid fa-circle-arrow-left"></i>
                    Cancel
                </a>
                <button type="submit" asp-page-handler="SaveAndContinue" class="btn btn-primary float-end me-2">
                    <i class="fa-solid fa-folder-plus"></i>
                    Save and continue to edit
                </button>
                <button type="submit" asp-page-handler="Save" class="btn btn-primary float-end me-2">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Save
                </button>
            </div>
        </div>

        <input type="hidden" asp-for="Order.Id" />

        <partial name="_FormHeader.cshtml" for="Order" />
        <partial name="_FormItems.cshtml" for="Order" />
        <partial name="_FormTotals.cshtml" for="Order" />
    </form>
</div>

@section scripts {
    <script src="~/js/orders.form.js" asp-append-version="true"></script>
}
